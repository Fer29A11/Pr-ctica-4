<Window x:Class="GestorProductoWPF.AgregarProductoWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorProductoWPF"
        mc:Ignorable="d"
        Title="AgregarProductoWindows" Height="450" Width="800"
        Background="#F4F4F4">

    <Grid>
        <TextBox x:Name="txtID"
                 HorizontalAlignment="Center" Margin="0,10,0,379"
                 Width="452"
                 Background="White" Foreground="Black"
                 BorderBrush="#CCCCCC" Text="ID"/>

        <TextBox x:Name="txtStock"
                 HorizontalAlignment="Center" Margin="0,272,0,114"
                 Width="452"
                 Background="White" Foreground="Black"
                 BorderBrush="#CCCCCC"
                 Text="Stock" TextChanged="txtStock_TextChanged"/>

        <TextBox x:Name="txtPrecio"
                 HorizontalAlignment="Center" Margin="0,222,0,167"
                 Width="452"
                 Background="White" Foreground="Black"
                 BorderBrush="#CCCCCC"
                 Text="Precio"/>

        <TextBox x:Name="txtCategoria"
                 HorizontalAlignment="Center" Margin="0,167,0,217"
                 Width="452"
                 Background="White" Foreground="Black"
                 BorderBrush="#CCCCCC"
                 Text="Categoria"/>

        <TextBox x:Name="txtCodigoBarras"
                 HorizontalAlignment="Center" Margin="0,110,0,276"
                 Width="452"
                 Background="White" Foreground="Black"
                 BorderBrush="#CCCCCC"
                 Text="Código de Barras"/>

        <TextBox x:Name="txtNombre"
                 HorizontalAlignment="Center" Margin="0,60,0,329"
                 Width="452"
                 Background="White" Foreground="Black"
                 BorderBrush="#CCCCCC"
                 Text="Nombre"/>

        <Button x:Name="btnGuardar"
                Content="Guardar"
                HorizontalAlignment="Center" Margin="0,325,0,63"
                Width="112" Height="46"
                Background="#0078D7" Foreground="White"
                BorderBrush="#005A9E"
                Click="btnGuardar_Click"/>
    </Grid>
</Window>



